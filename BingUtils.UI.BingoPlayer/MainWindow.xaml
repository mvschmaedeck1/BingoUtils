<Controls:MetroWindow x:Class="BingUtils.UI.BingoPlayer.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:local="clr-namespace:BingUtils.UI.BingoPlayer"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      mc:Ignorable="d"
                      DataContext="{StaticResource ViewModel_MainWindow}"
                      Title="Que Comecem Os Jogos! - Bingo" 
                      TitlebarHeight="30" 
                      TitleAlignment="Center"
                      MinHeight="600" 
                      MinWidth="800"
                      Height="600" 
                      Width="800"
>

    <Controls:MetroWindow.TitleTemplate>
        <DataTemplate>
            <TextBlock Text="{TemplateBinding Content}"
                   TextTrimming="CharacterEllipsis"
                   VerticalAlignment="Center"
                   Margin="8 -1 8 0"
                   FontWeight="Light"
                   FontSize="{DynamicResource WindowTitleFontSize}"
                   FontFamily="{DynamicResource HeaderFontFamily}"
            />
        </DataTemplate>
    </Controls:MetroWindow.TitleTemplate>

    <Grid>
        <Grid Visibility="{Binding StartGameComponentsVisibility}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <Image Source="/Resources/logo-ifrs-farroupilha.png" VerticalAlignment="Top" Margin="50,20,50,0" />

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1" Margin="30">
                <Viewbox Margin="0,30">
                    <TextBlock TextAlignment="Center" Text="Clique no botão abaixo para iniciar um novo jogo" FontFamily="Segoe UI Semibold"  />
                </Viewbox>
                
                <Button Style="{StaticResource MetroFlatButton}" Visibility="{Binding StartGameComponentsVisibility}" Command="{Binding StartGameCommand}" Content="Iniciar novo jogo" Width="200" />
            </StackPanel>

            <Grid VerticalAlignment="Bottom" Grid.Row="2">
                <Button Margin="10" HorizontalAlignment="Left" Content="Auxiliar para distribuição de quesões" Width="250" />
                <Button Margin="10" HorizontalAlignment="Right" Content="Mais informações sobre o programa" Width="250"/>
            </Grid>
        </Grid>

        <Grid Visibility="{Binding GameComponentsVisibility}" MaxHeight="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Window}}">
            <Grid VerticalAlignment="Bottom" Visibility="{Binding StartGameComponentsVisibility}">
                <Button Margin="10" HorizontalAlignment="Left" Content="Auxiliar para distribuição de quesões" Width="250" />

                <Button Margin="10" HorizontalAlignment="Right" Content="Mais informações sobre o programa" Width="250"/>
            </Grid>
            <Grid HorizontalAlignment="Right" VerticalAlignment="Stretch" Width="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <Button Grid.Row="1" IsEnabled="{Binding HasNext}" Visibility="{Binding GameComponentsVisibility}" Command="{Binding NextQuestionCommand}">
                    <Rectangle Height="50" VerticalAlignment="Stretch" Width="20" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_navigate_next}"  />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                </Button>
            </Grid>

            <Grid HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <Button Grid.Row="1" IsEnabled="{Binding HasPrevious}" Visibility="{Binding GameComponentsVisibility}" Command="{Binding PreviousQuestionCommand}">
                    <Rectangle Height="50" VerticalAlignment="Stretch" Width="20" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                        <Rectangle.OpacityMask>
                            <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_navigate_previous}"  />
                        </Rectangle.OpacityMask>
                    </Rectangle>
                </Button>
            </Grid>

            <Label Visibility="{Binding GameComponentsVisibility}" VerticalAlignment="Top" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Content="{Binding QuestionProgress}" ContentStringFormat="QUESTÃO {0}" FontSize="32" FontFamily="Segoe UI Light" />

            <Grid Margin="100,60,100,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25" />
                        <RowDefinition Height="4*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Background="{DynamicResource AccentColorBrush}" />

                    <Viewbox Grid.Row="0">
                        <TextBlock TextAlignment="Center" Text="QUESTÃO ATUAL" FontFamily="Segoe UI Light" HorizontalAlignment="Stretch" MinWidth="300" />
                    </Viewbox>

                    <Viewbox Grid.Row="1" Margin="5,0,5,10" VerticalAlignment="Top">
                        <TextBlock TextAlignment="Center" Text="{Binding CurrentQuestionTitle}" HorizontalAlignment="Stretch" MaxWidth="200" FontFamily="Segoe UI Semibold" TextWrapping="Wrap"  />
                    </Viewbox>
                </Grid>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25" />
                        <RowDefinition Height="4*" />
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0" Background="{DynamicResource AccentColorBrush2}" />

                    <Viewbox  Grid.Row="0">
                        <TextBlock TextAlignment="Center" Text="QUESTÃO ANTERIOR" FontFamily="Segoe UI Light" Width="550" Foreground="Gray" />
                    </Viewbox>

                    <Viewbox Grid.Row="1" Margin="5,0,5,10" VerticalAlignment="Top">
                        <TextBlock TextAlignment="Center" Text="{Binding PreviousQuestionTitle}" FontFamily="Segoe UI Semilight" Width="250" TextWrapping="Wrap" Foreground="Gray" />
                    </Viewbox>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Controls:MetroWindow>
