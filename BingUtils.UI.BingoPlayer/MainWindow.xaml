<Controls:MetroWindow x:Class="BingUtils.UI.BingoPlayer.MainWindow"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                      xmlns:local="clr-namespace:BingUtils.UI.BingoPlayer"
                      xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
                      mc:Ignorable="d"
                      DataContext="{StaticResource ViewModel_MainWindow}"
                      Title="Que Comecem Os Jogos! - Bingo" 
                      TitlebarHeight="30" 
                      TitleAlignment="Center"
                      MinHeight="600" 
                      MinWidth="800"
                      Height="600" 
                      Width="800"
>

    <Controls:MetroWindow.TitleTemplate>
        <DataTemplate>
            <TextBlock Text="{TemplateBinding Content}"
                   TextTrimming="CharacterEllipsis"
                   VerticalAlignment="Center"
                   Margin="8 -1 8 0"
                   FontWeight="Light"
                   FontSize="{DynamicResource WindowTitleFontSize}"
                   FontFamily="{DynamicResource HeaderFontFamily}"
            />
        </DataTemplate>
    </Controls:MetroWindow.TitleTemplate>


    <Grid MaxHeight="{Binding ActualHeight, RelativeSource={RelativeSource AncestorType=Window}}">
        <Button Visibility="{Binding PlayQuestionTitleButtonVisibility}" Width="30" Height="30" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="5" Style="{DynamicResource MetroCircleButtonStyle}" Command="{Binding PlayQuestionTitleCommand}">
            <Rectangle Width="12" Height="12" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                <Rectangle.OpacityMask>
                    <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_sound_2}" />
                </Rectangle.OpacityMask>
            </Rectangle>
        </Button>

        <Button Visibility="{Binding StopQuestionTitleCommandVisibility}" Width="30" Height="30" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="5" Style="{DynamicResource MetroCircleButtonStyle}" Command="{Binding StopQuestionTitleCommand}">
            <Rectangle Width="8" Height="8" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                <Rectangle.OpacityMask>
                    <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_control_stop}" />
                </Rectangle.OpacityMask>
            </Rectangle>
        </Button>

        <Grid HorizontalAlignment="Right" VerticalAlignment="Stretch" Width="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="1" IsEnabled="{Binding HasNext}" Command="{Binding NextQuestionCommand}">
                <Rectangle Height="50" VerticalAlignment="Stretch" Width="20" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_navigate_next}"  />
                    </Rectangle.OpacityMask>
                </Rectangle>
            </Button>
        </Grid>

        <Grid HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="1" IsEnabled="{Binding HasPrevious}" Command="{Binding PreviousQuestionCommand}">
                <Rectangle Height="50" VerticalAlignment="Stretch" Width="20" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_navigate_previous}"  />
                    </Rectangle.OpacityMask>
                </Rectangle>
            </Button>
        </Grid>

        <Label Visibility="{Binding GameComponentsVisibility}" VerticalAlignment="Top" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Content="{Binding QuestionProgress}" ContentStringFormat="QUESTÃO {0}" FontSize="32" FontFamily="Segoe UI Light" />

        <Grid Margin="100,60,100,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*" />
                <RowDefinition Height="1*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25" />
                    <RowDefinition Height="4*" />
                </Grid.RowDefinitions>

                <Viewbox  Grid.Row="0">
                    <TextBlock TextAlignment="Center" Text="QUESTÃO ATUAL" FontFamily="Segoe UI Light" HorizontalAlignment="Stretch" MinWidth="300" />
                </Viewbox>

                <Viewbox Grid.Row="1" Margin="5,0,5,10" VerticalAlignment="Top">
                    <TextBlock TextAlignment="Center" Text="{Binding CurrentQuestionTitle}" HorizontalAlignment="Stretch" MaxWidth="200" FontFamily="Segoe UI Semibold" TextWrapping="Wrap"  />
                </Viewbox>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25" />
                    <RowDefinition Height="4*" />
                </Grid.RowDefinitions>

                <Viewbox  Grid.Row="0">
                    <TextBlock TextAlignment="Center" Text="QUESTÃO ANTERIOR" FontFamily="Segoe UI Light" Width="550" Foreground="Gray" />
                </Viewbox>

                <Viewbox Grid.Row="1" Margin="5,0,5,10" VerticalAlignment="Top">
                    <TextBlock TextAlignment="Center" Text="{Binding PreviousQuestionTitle}" FontFamily="Segoe UI Semilight" Width="250" TextWrapping="Wrap" Foreground="Gray" />
                </Viewbox>
            </Grid>
        </Grid>
    </Grid>
</Controls:MetroWindow>
