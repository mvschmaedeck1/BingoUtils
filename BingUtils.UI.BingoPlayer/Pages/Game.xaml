<Page x:Class="BingoUtils.UI.BingoPlayer.Pages.Game"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BingoUtils.UI.BingoPlayer.Pages"
      mc:Ignorable="d" 
      Title="Game" MinWidth="770" MinHeight="510"
      d:DesignWidth="770" d:DesignHeight="510"
      DataContext="{StaticResource ViewModel_Game}">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="40" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="40" />
        </Grid.ColumnDefinitions>

        <Grid HorizontalAlignment="Right" VerticalAlignment="Stretch" Width="40" Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="1" IsEnabled="{Binding HasNext}" Command="{Binding NextQuestionCommand}">
                <Rectangle Height="50" VerticalAlignment="Stretch" Width="20" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_navigate_next}"  />
                    </Rectangle.OpacityMask>
                </Rectangle>
            </Button>
        </Grid>

        <Grid HorizontalAlignment="Left" VerticalAlignment="Stretch" Width="40" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="1" IsEnabled="{Binding HasPrevious}" Command="{Binding PreviousQuestionCommand}">
                <Rectangle Height="50" VerticalAlignment="Stretch" Width="20" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_navigate_previous}"  />
                    </Rectangle.OpacityMask>
                </Rectangle>
            </Button>
        </Grid>

        <Grid Grid.Column="1">
            <Button ToolTip="Conferir respostas que saíram até o momento" Width="40" Height="40" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5" Style="{DynamicResource MetroCircleButtonStyle}" Command="{Binding PlayQuestionTitleCommand}">
                <Rectangle Width="12" Height="17" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_clipboard_paper_check}" />
                    </Rectangle.OpacityMask>
                </Rectangle>
            </Button>

            <Button ToolTip="Reproduzir enunciado da questão" Visibility="{Binding PlayQuestionTitleButtonVisibility}" Width="40" Height="40" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="5" Style="{DynamicResource MetroCircleButtonStyle}" Command="{Binding PlayQuestionTitleCommand}">
                <Rectangle Width="14" Height="14" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_sound_2}" />
                    </Rectangle.OpacityMask>
                </Rectangle>
            </Button>

            <Button ToolTip="Parar reprodução do enunciado da questão" Visibility="{Binding StopQuestionTitleCommandVisibility}" Width="40" Height="40" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="5" Style="{DynamicResource MetroCircleButtonStyle}" Command="{Binding StopQuestionTitleCommand}">
                <Rectangle Width="8" Height="8" Fill="{Binding Path=Foreground, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Button}}}">
                    <Rectangle.OpacityMask>
                        <VisualBrush Stretch="Fill" Visual="{DynamicResource appbar_control_stop}" />
                    </Rectangle.OpacityMask>
                </Rectangle>
            </Button>

            <Label Margin="0,5" VerticalAlignment="Top" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Content="{Binding QuestionProgress}" ContentStringFormat="QUESTÃO ATUAL ({0})" MaxHeight="40" FontSize="26" FontFamily="Segoe UI Light" />

            <Grid Margin="25,60,25,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="1*" />
                </Grid.RowDefinitions>

                <Viewbox Grid.Row="0" VerticalAlignment="Top">
                    <TextBlock MaxWidth="300" TextAlignment="Center" Text="{Binding CurrentQuestionTitle}" HorizontalAlignment="Stretch" FontFamily="Segoe UI Semibold" TextWrapping="Wrap"  />
                </Viewbox>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="25" />
                        <RowDefinition Height="4*" />
                    </Grid.RowDefinitions>

                    <Viewbox  Grid.Row="0">
                        <TextBlock TextAlignment="Center" Text="QUESTÃO ANTERIOR" FontFamily="Segoe UI Light" Width="550" Foreground="Gray" />
                    </Viewbox>

                    <Viewbox Grid.Row="1" Margin="5,0,5,10" VerticalAlignment="Top">
                        <TextBlock TextAlignment="Center" Text="{Binding PreviousQuestionTitle}" FontFamily="Segoe UI Semilight" Width="250" TextWrapping="Wrap" Foreground="Gray" />
                    </Viewbox>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Page>
