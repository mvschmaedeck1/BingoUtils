<UserControl x:Class="BingoUtils.UI.Shared.UserControls.QuestionHolder"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BingoUtils.UI.Shared.UserControls"
             xmlns:Controls="http://metro.mahapps.com/winfx/xaml/controls"
             mc:Ignorable="d" 
             x:Name="_self"
             d:DesignHeight="22" d:DesignWidth="600">
    <Grid VerticalAlignment="Top">
        <Grid.Resources>
            <Style TargetType="TextBox">
                <Setter Property="Height" Value="22" />
                <Setter Property="FontSize" Value="14" />
            </Style>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBox Text="{Binding Title, ElementName=_self}"  Margin="0, 0, 2.5, 0" Grid.Column="0" Controls:TextBoxHelper.Watermark="Título da questão"  />
        <TextBox Text="{Binding Answer, ElementName=_self}" Margin="2.5, 0, 0, 0" Grid.Column="1" Controls:TextBoxHelper.Watermark="Resposta da questão" />
    </Grid>
</UserControl>
