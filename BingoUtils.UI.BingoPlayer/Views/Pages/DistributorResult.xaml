<Page x:Class="BingoUtils.UI.BingoPlayer.Views.Pages.DistributorResult"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:BingoUtils.UI.BingoPlayer.Views.Pages"
      mc:Ignorable="d" 
      MinWidth="770" MinHeight="510"
      d:DesignWidth="770" d:DesignHeight="510"
      Title="DistributorResult">

    <DataGrid AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False" ItemsSource="{Binding QuestionList}" IsReadOnly="True">
        <DataGrid.Columns>
            <DataGridTextColumn Header="# da cartela" Binding="{Binding Id}" />
            <DataGridTextColumn Header="Máxima semelhança" Binding="{Binding MaxSemelhanca}" />
            <DataGridTextColumn Header="Máx. semelhança com a cartela" Binding="{Binding MaxSemelhancaCom}" />
            <DataGridTextColumn Header="# das questões" Binding="{Binding Questions}" Width="*" />
        </DataGrid.Columns>
    </DataGrid>
</Page>
